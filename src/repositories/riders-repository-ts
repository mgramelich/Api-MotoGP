interface IRiderModel {
  id: number;
  name: string;
}


const database: IRiderModel[] = [
  {
    id: 1,
    name: 'Jorge Martin'
  },
  {
    id: 2,
    name: 'Franco Morbidelli'
  }
];


export const findAllRiders = async (): Promise<IRiderModel[]> => {
  return database;
};

export const findRiderById = async (id: number): Promise<IRiderModel | null> => {
  return database.find(rider => rider.id === id) ?? null;
};

